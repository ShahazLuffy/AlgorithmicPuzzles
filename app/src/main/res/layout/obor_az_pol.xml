<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#76358c"
    android:layoutDirection="rtl"
    tools:context="com.example.shahaz.algorithmicpuzzles.MainActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/obor_pol"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/moarefi_btn"
        android:text="معرفی"
        android:layout_width="140px"
        android:layout_height="90px"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="moareficlick"
        android:layout_marginEnd="20dp" />
    <Button

        android:text="راهنمایی"
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:onClick="rahnamiiclick"
        android:id="@+id/rahnamaii_btn" />
    <Button
        android:id="@+id/martabe_btn"
        android:onClick="martabeclick"
        android:text="مرتبه زمانی"
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="180dp" />
    <Button
        android:text="نظر"
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="260dp" />
    <Button
        android:text="بازی"
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/rahnamaii_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
